// This will be replaced by an environment variable
const API_URL = 'http://localhost:3001/api/data';
let data = { message: 'Loading...' };
try {
  const response = await fetch(API_URL);
  if (response.ok) {
    data = await response.json();
  } else {
    data = { message: 'Failed to fetch data.' };
  }
} catch (error) {
  data = { message: 'Error connecting to the API.' };
}
